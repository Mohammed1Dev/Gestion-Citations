<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="bootstrap.min.css">
  <link rel="stylesheet" href="main.css">
</head>
</head>
<body>

<div class="container-fluid">
  <a href="/add" class="btn btn-lg btn-primary float-right">Ajout Auteur</a><br/><br/>



  <h1><%= title %></h1><br>
      <div class="row mb-5">

       <% rows.forEach(function(row){ %>
               <div class="col-3" >
                <div class="card">
                    <div class="card-header align-center"><h1 align="center">Auteur :<%= row.id_Auteur %></h1></div>
                   <div class="card-body">

                    <h3 class="card-text align-center" style="color: green;"><%= row.Nom %></h3>
                    <h3 class="card-text align-center" style="color: green;"><%= row.Age %></h3>
                    <h3 class="card-text align-center" style="color: green;"><%= row.Nationalite %></h3>


           <a href="edit/<%= row.id_Auteur %>" class="btn btn-lg   btn-primary">Edit</a>
          <a href="delete/<%= row.id_Auteur %>" class="btn btn-lg  btn-danger">Delete</a>
    </div>
    </div>
    </div>


 <% }); %>
  </div>
  </div>
</body>
</html>
